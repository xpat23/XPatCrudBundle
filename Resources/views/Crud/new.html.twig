{% extends '@XPatCrud/layaut.html.twig' %}
{# @var params \XPat\CrudBundle\Service\CrudControllerParameters  #}
{% block stylesheets %}
    {% for src in params.createConfig.styles %}
        <link type="text/css" rel="stylesheet" href="{{ asset(src) }}"/>
    {% endfor %}
{% endblock %}
{% block header %}
    <h3>
        {{ params.title }}
        <small>new</small>
    </h3>
{% endblock %}
{% block content %}
    <div>
        {{ form_start(form) }}
        <div>
            {{ form_widget(form) }}
        </div>

        <div>
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-default" href="{{ path( params.routePrefix~'index') }}">Cancel</a>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    {% for src in params.createConfig.scripts %}
        <script type="text/javascript" src="{{ asset(src) }}"></script>
    {% endfor %}
{% endblock %}
